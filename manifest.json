---
{
  "short_name": "{{ site.data.site.name }}",
  "name": "{{ site.data.site.name }}",
  "icons": [
    {
      "src": "{{ site.data.site.logo | remove_file_extension | append: '.webp' | relative_url }}",
      "type": "image/webp",
      "sizes": "192x192"
    },
    {
      "src": "{{ site.data.site.logo | relative_url }}",
      "sizes": "192x192"
    },
    {
      "src": "{{ site.data.site.themed_mask_icon | relative_url }}",
      "sizes": "256x256",
      "purpose": "maskable"
    },
    {
      "src": "{{ site.data.site.sharing_image | remove_file_extension | append: '.webp' | relative_url }}",
      "type": "image/webp",
      "sizes": "512x512 1024x1024"
    },
    {
      "src": "{{ site.data.site.sharing_image | relative_url }}",
      "sizes": "512x512 1024x1024"
    }
  ],
  "start_url": "{{ '.' | relative_url }}",
  "background_color": "{{ site.data.site.background_color }}",
  "display": "standalone",
  "scope": "{{ '.' | relative_url }}",
  "theme_color": "{{ site.data.site.color }}",
  "description": "{{ site.data.site.description }}"
}
